{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["public/**", "dist/**"]
    },
    "lint": {},
    "lint:fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy:solo": {
      "dependsOn": ["^build"]
    },
    "deploy:testnet": {
      "dependsOn": ["^build"]
    },
    "compile": {
      "dependsOn": ["^build"]
    },
    "solo-up": {
      "cache": false
    },
    "solo-down": {
      "cache": false
    }
  }
}
