{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "PORT",
    "LOG_FORMAT",
    "LOG_DIR",
    "OPENAI_API_KEY",
    "ADMIN_MNEMONIC",
    "ADMIN_ADDRESS",
    "TREASURY_ADDRESS",
    "MAX_FILE_SIZE",
    "ORIGIN",
    "CREDENTIALS",
    "NETWORK_URL",
    "NETWORK_TYPE",
    "REWARD_AMOUNT",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["public/**", "dist/**"]
    },
    "lint": {},
    "lint:fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy:solo": {
      "dependsOn": ["^build"]
    },
    "deploy:testnet": {
      "dependsOn": ["^build"]
    },
    "compile": {
      "dependsOn": ["^build"]
    },
    "solo-up": {
      "cache": false
    },
    "solo-down": {
      "cache": false
    }
  }
}
